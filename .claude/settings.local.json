{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(docker compose:*)",
      "Bash(lsof:*)",
      "Bash(ls:*)",
      "Bash(mv:*)",
      "Bash(docker system prune:*)",
      "Bash(claude --version)",
      "Bash(claude update)",
      "Bash(claude mcp:*)",
      "Bash(npm install:*)"
    ],
    "deny": [
      "Bash(docker-compose up:*)",
      "Bash(docker-compose up -d:*)",
      "Bash(docker compose up -d:*)"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "serena"
  ]
}